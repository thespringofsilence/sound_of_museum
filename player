<!DOCTYPE html>
<html lang="zh-CN">
<head>
<meta charset="UTF-8" />
<title>播放媒体</title>
</head>
<body>
<h1>播放媒体</h1>
<audio id="audioPlayer" controls style="width: 100%; max-width: 600px;"></audio>

<script>
(function() {
  // 获取URL参数
  const params = new URLSearchParams(window.location.search);
  const src = params.get('src'); // 媒体文件路径
  const player = document.getElementById('audioPlayer');
  
  if (src) {
    // 设置媒体源
    player.src = src;
    player.play();
  } else {
    document.body.innerHTML = "<p>未找到媒体资源</p>";
  }
})();
</script>
</body>
</html>
